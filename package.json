{
  "name": "tamv-online",
  "version": "2026.1.3",
  "private": true,
  "scripts": {
    /*  Runtime TAMV */
    "dev": "vite",
    "build": "npm run typecheck && vite build && npm run build:server",
    "build:server": "tsc -p tsconfig.server.json",
    "preview": "vite preview",

    /*  Guardia de calidad local/CI */
    "lint": "eslint . --ext .ts,.tsx --max-warnings=0",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc -p tsconfig.app.json --noEmit && tsc -p tsconfig.server.json --noEmit",
    "test": "jest --config jest.config.json",
    "test:watch": "jest --config jest.config.json --watch",
    "test:coverage": "jest --config jest.config.json --coverage",
    "security:audit": "npm audit --audit-level=high",

    /*  Bloqueo constitucional en commits */
    "precommit:guard": "npm run lint && npm run typecheck && npm run test:coverage && npm run security:audit && npm run format:check",

    /*  Quality Gate completo para CI / pre-push */
    "quality:gate": "npm run lint && npm run typecheck && npm run test:coverage && npm run security:audit && npm run format:check",

    /*  Docker + Helm (despliegue civilizatorio) */
    "docker:build": "docker build -t tamv-online .",
    "docker:sign": "cosign sign tamv-online",
    "deploy:helm": "helm upgrade --install tamv ./helm",

    /*  Hook automÃ¡tico de Husky */
    "prepare": "husky install"
  },
  "engines": {
    "node": ">=18.18.0"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "vite": "^5.0.0",
    "@simplewebauthn/browser": "^9.0.0",
    "@supabase/supabase-js": "^2.5.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "typescript": "^5.6.0",
    "eslint": "^8.55.0",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "prettier": "^3.1.1",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.11",
    "ts-jest": "^29.1.1",
    "lint-staged": "^15.2.0",
    "husky": "^9.0.0",
    "cosign": "0.0.0"
  }
}
